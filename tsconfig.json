{
    "compilerOptions": {
        "baseUrl": "./src",
        "declaration": true,
        "declarationMap": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "lib": ["dom", "es2017"],
        "module": "amd",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./lib",
        "pretty": true,
        "rootDir": "./src",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "strictFunctionTypes": false,
        "strictPropertyInitialization": false,
        "target": "es2017"
    },
    "exclude": ["**/*.d.ts", "**/lib"],
    "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
